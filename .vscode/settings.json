{
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.wordBasedSuggestions": "currentDocument",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "python.defaultInterpreterPath": "${env.PYENV_ROOT}/versions/3.11.9/bin/python",
  "ruff.enable": true,
  "ruff.format.args": ["--config=${workspaceFolder}/ruff.toml"],
  "ruff.lint.args": ["--config=${workspaceFolder}/ruff.toml"]
}
